# This option alone saves 6592 bytes of flash
LTO_ENABLE = yes

# This feature activates layer 3 when buttons for layer 1 and layer 2 are pressed at the same time.
# Right now I don't have keys defined that make this possible, so it's disabled for now.
# TRI_LAYER_ENABLE = yes

# Allow loading of keymaps from VIA web app
VIA_ENABLE = yes

# This feature allows the tapping term to be adjusted dynamically with keycodes.
DYNAMIC_TAPPING_TERM_ENABLE = yes

# Enable RGB matrix support for colorful lighting.
RGB_MATRIX_ENABLE = yes

# Could be interesting but throws an error about no PIN defined for the backlight.
# BACKLIGHT_ENABLE = yes

# Save some more memory
MOUSEKEY_ENABLE = no
EXTRAKEY_ENABLE = no
NKRO_ENABLE = no
MIDI_ENABLE = no

